<h2 class="hello_text">Hello, User!....</h2>
<hr>
<h2 style="font-size:1.3rem; font-weight=600; margin:20px 0; margin-bottom:40px;">Sign in</h2>
<%= form_with url: sessions_path,class: "form" do |form| %>
  <div class="input-box">
    <p class="input-Lable">E-mail : </p>
    <%= form.email_field :email,:autofocus => "autofocus",class: "form_input"%>
  </div>
  <div class="input-box">
    <p class="input-Lable">Password : </p>
    <%= form.password_field :password,class: "form_input"%>
  </div>
  <div class="input-box">
    <%= form.submit "Sign in",class: "submit_btn"%>
  </div>
  <%= link_to "Forgot password",forgot_password_path,class: "forgot_password_link"%>
<% end %>